<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <!--INPUT TEXT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/formula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="35dp"
            android:textColor="#a7a7a7"
            android:gravity="center|right"
            />

    </LinearLayout>

    <!--LINE 1(7, 8, 9, /)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="/"
            android:textSize="18dp"
            />

    </LinearLayout>

    <!--LINE 2(4, 5, 6, *)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/multi"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="*"
            android:textSize="18dp"
            />>

    </LinearLayout>

    <!--LINE 3(1, 2, 3, -)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="18dp"
            />>

    </LinearLayout>

    <!--LINE 4(0, +)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="3"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="18dp"
            />

    </LinearLayout>

    <!--LINE 5(C, =)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:text="C"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:text="="
            android:textSize="18dp"
            />

    </LinearLayout>


</LinearLayout>